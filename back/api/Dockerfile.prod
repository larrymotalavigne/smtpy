# Multi-stage production Dockerfile for SMTPy API
# Optimized for small image size, security, and performance

# Stage 1: Builder - Install dependencies
FROM python:3.14-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast dependency management
RUN pip install --no-cache-dir uv

# Copy dependency files
COPY ./pyproject.toml ./uv.lock ./

# Install Python dependencies in virtual environment (including alembic for migrations)
RUN uv sync --frozen

# Stage 2: Runtime - Minimal production image
FROM python:3.14-slim

# Create non-root user for security
RUN groupadd -r smtpy && useradd -r -g smtpy smtpy

WORKDIR /app

# Install only runtime dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        libpq5 \
        curl \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /app/.venv /app/.venv

# Copy shared modules first
COPY ./back/shared ./shared

# Copy application code into 'api' subdirectory to maintain import paths
COPY ./back/api ./api

# Copy Alembic migration files (from back/ directory)
COPY ./back/alembic.ini ./alembic.ini
COPY ./back/migrations ./migrations

# Ensure venv is in PATH and set PYTHONPATH to /app so 'api' module can be found
ENV PATH="/app/.venv/bin:$PATH" \
    PYTHONPATH="/app" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Change ownership to non-root user
RUN chown -R smtpy:smtpy /app

# Switch to non-root user
USER smtpy

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose API port
EXPOSE 8000

# Run with uvicorn from api directory
CMD ["uvicorn", "api.main:create_app", "--host", "0.0.0.0", "--port", "8000", "--factory", "--workers", "4"]
